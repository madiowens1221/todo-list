{
    "extends": [
        "airbnb-base"
    ],
    "rules": {
        "indent": [1, 4, { "SwitchCase": 1, "VariableDeclarator": 1}],
        "linebreak-style": 0
    },
    "plugins": [
        "import"
    ],
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["src"]
            }
        }
    }
}

